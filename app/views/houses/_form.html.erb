<%= simple_form_for(@house) do |f| %>
  <%= f.input :name %>
  <%= f.input :address%>
  <%= f.input :description %>
  <%= f.input :guests, as: :integer, input_html: { min: '0', step: 'any' }%>
  <%= f.input :bedrooms, as: :integer, input_html: { min: '0', step: 'any' }%>
  <%= f.input :beds, as: :integer, input_html: { min: '0', step: 'any' }%>
  <%= f.input :bathrooms, as: :integer, input_html: { min: '0', step: 'any' }%>
  <%= f.input :price, as: :float%>
  <%= f.submit "Rent my home!"%>
<% end %>
